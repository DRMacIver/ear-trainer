{
  "hooks": {
    "SessionStart": [
      {
        "hooks": [
          {
            "type": "command",
            "command": "\"$CLAUDE_PROJECT_DIR\"/.claude/scripts/run-py.sh \"$CLAUDE_PROJECT_DIR\"/.claude/scripts/startup-hook.py"
          }
        ]
      }
    ],
    "PreCompact": [
      {
        "hooks": [
          {
            "type": "command",
            "command": "\"$CLAUDE_PROJECT_DIR\"/.claude/scripts/run-py.sh \"$CLAUDE_PROJECT_DIR\"/.claude/scripts/precompact-beads-hook.py"
          }
        ]
      }
    ],
    "Stop": [
      {
        "hooks": [
          {
            "type": "command",
            "command": "\"$CLAUDE_PROJECT_DIR\"/.claude/scripts/run-py.sh \"$CLAUDE_PROJECT_DIR\"/.claude/scripts/autonomous-stop-hook.py"
          }
        ]
      }
    ],
    "PreToolUse": [
      {
        "matcher": "Bash",
        "hooks": [
          {
            "type": "command",
            "command": "\"$CLAUDE_PROJECT_DIR\"/.claude/scripts/run-py.sh \"$CLAUDE_PROJECT_DIR\"/.githooks/check-no-verify.py"
          }
        ]
      }
    ]
  },
  "enabledPlugins": {
    "claude-reliability@claude-reliability-marketplace": true,
    "beads@beads-marketplace": true
  }
}
